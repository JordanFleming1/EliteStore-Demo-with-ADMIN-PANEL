rules_version = '2';

// Firebase Storage rules for ecommerce store
service firebase.storage {
  match /b/{bucket}/o {
    // Images uploads to products folder
    match /products/{allPaths=**} {
      // Allow anyone to read product images (public access)
      allow read: if true;
      
      // Allow authenticated users to upload/modify images
      // In production, you should restrict this to admin users only
      allow write, delete: if request.auth != null 
        && request.auth.token.email_verified == true;
    }
    
    // Fallback rule for other paths
    match /{allPaths=**} {
      // Allow authenticated users to read/write their own files
      allow read, write: if request.auth != null;
    }
  }
}